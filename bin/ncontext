#!/usr/bin/env python

import argparse
from foundation.ncontext import NContext

def main(args):
    ctx = NContext.get_from_env()
    print "Show Name\t: {0}".format(ctx.show)
    print "Entity Type\t: {0}".format(ctx.entity_type)
    print "Entity Name\t: {0}".format(ctx.entity_name)
    print "Task Name\t: {0}".format(ctx.task)

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Prints out the information about context')
    args = parser.parse_args()
    main(args)