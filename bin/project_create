import argparse
from foundation.core import project

def main(args):
    project_obj = project.Project(args.project_name, args.config_file,
    args.premissions, args.update_config)

    project_obj.create()


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Quick tool to kick start a project')
    parser.add_argument("project_name", help="Name of the project to be created")
    parser.add_argument("--config_file", help="custom config file to be passed", default=None)
    parser.add_argument("--premissions", action="store_false", help="Disable setting default permission structure to the show")
    parser.add_argument("--update_config", action="store_true", help="Disable setting default permission structure to the show")
    args = parser.parse_args()
    main(args)