#!/usr/bin/env python

import argparse
from foundation.core import project

def main(args):

    if args.update_config:
        pass
        return True
    else:
        entity = project.ProjectEntity(args.config_file, args.template_name)
        entity.create()
        return True


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Quick tool to kick start a project')
    parser.add_argument("config_file", help="custom config file to be passed")
    parser.add_argument("template_name", help="custom config file to be passed")
    parser.add_argument("--update_config", action="store_true", help="Disable setting default permission structure to the show")
    args = parser.parse_args()
    main(args)